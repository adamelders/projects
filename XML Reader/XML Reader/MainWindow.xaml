<Window x:Class="XML_Reader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XML_Reader"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <ScrollViewer>
            <TextBlock x:Name="OutputTextBlock" Canvas.Top="10" TextWrapping="Wrap"><InlineUIContainer>
                    <Button x:Name="button" Content="Button" Width="75" Click="button_Click"/>
                </InlineUIContainer></TextBlock>
        </ScrollViewer>
    </Grid>
</Window>
